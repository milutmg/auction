{
  "name": "antique-bidderly-server",
  "version": "1.0.0",
  "description": "Backend server for Antique Bidderly auction platform",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate": "node scripts/migrate-enhanced-schema.js",
    "db:setup": "psql -f database/schema.sql && npm run migrate",
    "db:reset": "psql -c 'DROP DATABASE IF EXISTS antique_auction;' && psql -c 'CREATE DATABASE antique_auction;' && npm run db:setup"
  },
  "keywords": [
    "auction",
    "antique",
    "bidding",
    "express",
    "nodejs"
  ],
  "author": "Antique Bidderly Team",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "validator": "^13.12.0",
    "sharp": "^0.33.3",
    "exifr": "^7.1.3",
    "imghash": "^0.0.5",
    "nodemailer": "^6.9.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.1.0",
    "nodemon": "^3.1.10",
    "playwright": "^1.54.1"
  }
}
